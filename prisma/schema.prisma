generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id          String  @id @unique @default(cuid())
  Name        String
  description String
  price       Float
  img         String  @db.LongText
  Cart        Cart?   @relation(fields: [cartId], references: [id])
  cartId      String?
}

model Cart {
  id String @id @default(cuid())

  products Products[]
}
